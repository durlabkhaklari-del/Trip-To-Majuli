<body>
<div class="box">
<h2>Majuli Trip Ticket</h2>
<input id="name" placeholder="Customer Name">
<input id="adv" type="number" placeholder="Advance Amount ₹">
<button onclick="sendTicket()">Send Ticket on WhatsApp</button>
</div>

<canvas id="c" width="900" height="500"></canvas>

<script>
function sendTicket(){
 let n=name.value,a=adv.value;
 if(!n||!a){alert("Fill all details");return;}
 let ctx=c.getContext("2d");
 ctx.fillStyle="#22c55e";ctx.fillRect(0,0,900,500);
 ctx.fillStyle="#fff";ctx.font="bold 40px Arial";ctx.textAlign="center";
 ctx.fillText("SEAT BOOKING TICKET",450,70);
 ctx.font="26px Arial";ctx.textAlign="left";
 ctx.fillText("Destination: Majuli",80,160);
 ctx.fillText("Date: 22 January 2024",80,210);
 ctx.fillText("Name: "+n,80,260);
 ctx.fillText("Advance: ₹"+a,80,310);
 ctx.font="22px Arial";ctx.textAlign="center";
 ctx.fillText("Seat confirmed after advance payment",450,390);

 c.toBlob(async b=>{
   let f=new File([b],"Majuli_Ticket.png",{type:"image/png"});
   if(navigator.canShare&&navigator.canShare({files:[f]})){
     navigator.share({files:[f],title:"Majuli Ticket"});
   }else{
     let x=document.createElement("a");
     x.href=URL.createObjectURL(b);
     x.download="Majuli_Ticket.png";
     x.click();
   }
 });
}
</script>
</body>
